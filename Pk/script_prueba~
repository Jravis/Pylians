#!/bin/bash
#This script is used to generate the P(k) of the CDM, NU, DM and halos from the
#new simulations run by Paco: 1000 Mpc/h 512^3 CDM and 512^3 NU particles with
#the tree ON for the neutrinos.

memory=50G

dims=1024

mass_interval=1
min_mass=1.0e4  #1.6e3
max_mass=3.0e5


############################## CDM ###################################

######## z=0 ########
snapshot_fname=/disk/disksom2/villa_/1000Mpc_z=99/CDM/snapdir_022/snap_022
groups_fname=/disk/disksom2/villa_/1000Mpc_z=99/CDM
groups_number=22

f_CDM=Pk_DM_0.0_z=0.dat
f_NU=A
f_DM=A
f_CDM_NU=A 
f_halos=Pk_halos_0.0_z=0.dat
f_CDM_halos=Pk_DM-halos_0.0_z=0.dat
f_DM_halos=A

obj=CDM

clusterlauncher -m $memory -n 1 python Pk.py $snapshot_fname $groups_fname $groups_number $obj $mass_interval $min_mass $max_mass $dims $f_CDM $f_NU $f_DM $f_CDM_NU $f_halos $f_CDM_halos $f_DM_halos &
