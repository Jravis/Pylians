#!/bin/bash

############################ INPUT ###############################
cpus=20
queue=short
som=som2
###############
location=som2
mass_criteria=m200
min_mass=2e12
max_mass=2e15

N_par=1000000 #only when computing the CDM/NU correlation function
random_points=10000000 #number of points in the random catalogue

