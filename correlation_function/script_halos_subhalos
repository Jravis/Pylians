DD_action=compute
RR_action=read
DR_action=compute

DD_name=DD.dat
DR_name=DR.dat

BoxSize=500.0
bins=40


################# 0.0 eV ##################
Mnu=0.0

Rmin=0.1
Rmax=50.0
RR_name=RR_0.1_50_40_1e7.dat

####### z=0.0 #######
z=0.0

mode=halos
f_out=TPCF_halos_0.0_z=0.dat

clusterlauncher -q $queue -n $cpus python correlation_function.py $Mnu $z $location $mass_criteria $min_mass $max_mass $mode $N_par $random_points $DD_action $RR_action $DR_action $DD_name $RR_name $DR_name $random_file $BoxSize $bins $Rmin $Rmax $f_out

mode=subhalos
f_out=TPCF_subhalos_0.0_z=0.dat

